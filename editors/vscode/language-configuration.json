{
  "comments": {
    "lineComment": "--",
    "blockComment": ["{-", "-}"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "{-", "close": "-}" }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*{-",
      "end": "^\\s*-}"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "\\b(let|match|if|then|else|in|where)\\b|=>|\\{\\s*$",
    "decreaseIndentPattern": "^\\s*(\\}|\\||end)\\s*$"
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_']*"
}
